@model SForum.Models.Forum.AddForumModel
@{
    ViewData["Title"] = "Создать";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Создать новую категорию на форуме
        </div>
    </div>
    <div class="row frontPageContent">
        <div id="createForumSection">
            <form asp-action="CreateForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="form-group">
                    <label asp-for="Title">Категория</label>
                    <input asp-for="Title" class="form-control" required placeholder="Выбрать заголовок категории" maxlength="25"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group>">
                    <label asp-for="Description">Описнание</label>
                    <input asp-for="Description" class="form-control" required placeholder="Выбрать описание категории" maxlength="100"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Загрузить изображение категории</label><br/>
                    <label class="btn btn-default btn-file">
                        Выбрать <input asp-for="ImageUpload" typeof="file" accept="image/*" style="display:none"/>
                    </label>
                </div>
                <button type="submit" id="newFormBtn" class="btn btn-submitPost">Создать</button>
            </form>
        </div>
    </div>
</div>